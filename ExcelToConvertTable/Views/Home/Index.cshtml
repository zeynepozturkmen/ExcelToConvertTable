
@{
    Layout = null;
}
@using ExcelToConvertTable.Models
@model PersonModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <div class="container">
        <div class="row">

            <form action="/Home/UploadExcel" method="post" enctype="multipart/form-data">
                <div class="col-md-12">
                    <br />
                    <br />
                    <h4 class="col-md-2">Excel dosyası seç :</h4>

                    <input type="file" name="excelFile" class="btn btn-default" id="selectFile" />
                    <div class="col-md-12">
                        <br />
                        <input type="submit" name="Submit" value="Tabloya Aktar" class="btn btn-success" />

                        <button type="button" id="loading">Bekleniyor</button>
                        <br />
                    </div>
                </div>
            </form>

            <div class="col-md-12" id="listDiv">
                @Html.Partial(@"~\Views\Home\_PartialTableList.cshtml", Model)
            </div>

            <div id="domMessage" style="display:none;">
                @*<center><img src="~/images/op2.png" style="width:205px;height:70px" /></center>
                    <br />*@
                <img src="~/Images/786.gif" style="width:90px; height:90px;" /><br />
                <br />
                <h4><b>Lütfen Bekleyin.  İşlem Devam Ediyor ...</b></h4>

            </div>

        </div>
    </div>

    <script>

        $("#loading").click(function () {
            debugger;
            alert("sdfds");
   
            var input = document.getElementById('selectFile');

            $.ajax({
                type: 'POST',
                dataType: 'JSON',
                contentType: 'application/json charset=utf=8',
                url: '/Home/UploadExcel',
                data: input,
                beforeSend: function () {
                    $.blockUI({ message: $('#domMessage') });

                }
            }).done(function (d) {
                //$("#nav-home").html(d);


            }).always(function () {
                RefreshOfferFooter();
                $.unblockUI();
            });

        });
    </script>
</body>
</html>

